<h1>Todas las Tareas</h1>

<div id="timerForm">
	<label for="timerInput">Tarea</label>
	<input id="timerInput" type="text">
	<label id="minutes">00</label>:<label id="seconds">00</label>
	<button id="startTimer">Iniciar</button>
	<button id="stopTimer">Detener</button>
</div>

<div class="tasksList">
	<% @tasks.each do |task| %>
		<p><%= task.description %> - <span class="elapsedTime"></span></p>
	<% end %>
</div>

<%= link_to 'Ver todos los proyectos', projects_path %>